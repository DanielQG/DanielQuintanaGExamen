<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Encuesta">

    <TextView
        android:id="@+id/txtEncuesta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtEncuesta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Por qué eligió este centro?" />

    <EditText
        android:id="@+id/etEncuesta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtEncuesta3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" ¿Qué deportes practica?" />

    <CheckBox
        android:id="@+id/cbEncuesta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Futbol" />

    <CheckBox
        android:id="@+id/cbEncuesta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Natación" />

    <CheckBox
        android:id="@+id/cbEncuesta3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basket" />

    <TextView
        android:id="@+id/txtEncuesta4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Está interesado en aprender otro idioma aparte de inglés. " />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbEncuesta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Si" />

        <RadioButton
            android:id="@+id/rbEncuesta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No" />
    </RadioGroup>

    <Button
        android:id="@+id/btEncuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Enviar"
        android:text="Enviar" />
</LinearLayout>